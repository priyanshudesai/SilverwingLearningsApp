<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <Button
        android:id="@+id/animation_button1"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:text="Rotate"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp" />
    <ImageView
        android:id="@+id/animation_rotateimg"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/icon_local_phone"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_19sdp"
        android:layout_toRightOf="@+id/animation_button1" />
    <Button
        android:id="@+id/animation_button2"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:text="Move"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/animation_button1" />
    <ImageView
        android:id="@+id/animation_moveimg"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/icon_car_gray"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_19sdp"
        android:layout_below="@+id/animation_button1"
        android:layout_toRightOf="@+id/animation_button1"/>
    <Button
        android:id="@+id/animation_button3"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:text="Zoom In"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/animation_button2" />
    <TextView
        android:id="@+id/animation_zoomintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_19sdp"
        android:text="HELLO"
        android:textSize="@dimen/_40sdp"
        android:layout_below="@+id/animation_button2"
        android:layout_toRightOf="@+id/animation_button2"/>
    <Button
        android:id="@+id/animation_button4"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:text="Slide Down"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/animation_button3" />
    <ImageView
        android:id="@+id/animation_slidedownimg"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/logo_nature"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_19sdp"
        android:layout_below="@+id/animation_button3"
        android:layout_toRightOf="@+id/animation_button3"/>
    <Button
        android:id="@+id/animation_button5"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:text="Blink"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/animation_button4" />
    <ImageView
        android:id="@+id/animation_blinkimg"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/p_logo"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_19sdp"
        android:layout_below="@+id/animation_button4"
        android:layout_toRightOf="@+id/animation_button4"/>
    <Button
        android:id="@+id/animation_button6"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:text="Fade Out"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/animation_button5" />
    <ImageView
        android:id="@+id/animation_fadeoutimg"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/icon_location"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_19sdp"
        android:layout_below="@+id/animation_button5"
        android:layout_toRightOf="@+id/animation_button5"/>
</RelativeLayout>
</ScrollView>