<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Add a new Employee"
        android:gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp">
        <EditText
            android:id="@+id/datbase_emp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Employee Name"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Department"
        android:textSize="20sp"
        />
    <Spinner
        android:id="@+id/datbase_emp_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/departments"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/datbase_emp_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Employee Salary"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/datbase_emp_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/datbase_emp_viewemp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="View Employees"
        android:textSize="20sp"/>
</LinearLayout>